<%= form_for [@user, @menu_items], remote: true do |menu| %>
<div class="form-group">
  <label class="sr-only" for="exampleInputAmount">Amount (in dollars)</label>
  <div class="form-group">
    <label for="food_name" class="col-sm-2 control-label">Food name</label>
    <div class="col-sm-10">
      <%= menu.text_field :food_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="price" class="col-sm-2 control-label">Price</label>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <%= menu.text_field :price, class: "form-control" %>
      <!-- <input type="text" class="form-control" id="exampleInputAmount" placeholder="Amount"> -->
      <div class="input-group-addon">.00</div>
    </div>

  </div>
<%= menu.text_area :description, class: "form-control" %>
<%= menu.file_field :image %>
</div>
</div>
<%= menu.submit class: "btn btn-primary" %>
  <% end %>
