<div id="login">
  <div class="container">
    <div class="user-margin-div">
      <div id="login-container">
        <h3 align="center" style="margin-bottom: 30px;">Login to Your Account</h3>
        <%= form_tag sessions_path do %>
        <div class="field">
          <%= text_field_tag :email, params[:email], placeholder: "Email", class:"login-input-field login-input-form" %>
        </div>
        <div class="field">
          <%= password_field_tag :password, params[:password], placeholder: "Password", class:"login-input-field login-input-form" %>
        </div>
        <div class="actions">
          <%= submit_tag "Log In", class:"login-input-field login-submit" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
